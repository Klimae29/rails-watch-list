<div>
<h1 class="navbar-lewagon"><%= @list.name %></h1>
</div>

<div class="container mb-5">
  <div class="d-flex justify-content-between my-4">
    <p><% @list.movies.each do |movie|  %>
      <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
    <div class="card-category">
      <%= movie.title %>
      <%= image_tag(movie.poster_url, alt: "Movie poster") %>
      <%= link_to "delete this movie", list_bookmark_path(bookmark), class: "btn btn-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete #{movie.title}?" } %>
    </div>
    <%= bookmark.comment %>
    <% end %>
  </div>

  <div>
  </div>
</div>

<%= link_to "Add movie",  new_list_bookmark_path(@list) %>
